{
  "name": "lit-agent-tool-signer",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/lit-agent-tool-signer/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "commands": [
          "tsc --project tsconfig.json",
          "nx run lit-agent-tool-signer:bundle"
        ],
        "cwd": "packages/lit-agent-tool-signer",
        "parallel": false
      }
    },
    "bundle": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist",
        "main": "src/index.ts",
        "tsConfig": "tsconfig.json",
        "assets": ["*.md"],
        "format": ["esm"],
        "bundle": true,
        "minify": false,
        "skipTypeCheck": true,
        "platform": "node",
        "external": ["node:*"],
        "outputFileExtensionForESM": ".js"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/lit-agent-tool-signer/jest.config.ts"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf {projectRoot}/dist {projectRoot}/node_modules"
      }
    }
  },
  "tags": ["tool"]
}
