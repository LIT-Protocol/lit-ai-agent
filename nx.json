{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "sharedGlobals": [],
    "production": ["default"]
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "test", "lint", "format", "clean"],
        "parallel": 3
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "test": {
      "inputs": ["default", "^production"],
      "cache": true
    },
    "lint": {
      "inputs": ["default", "{workspaceRoot}/.eslintrc.json"],
      "cache": true
    },
    "format": {
      "inputs": ["default", "{workspaceRoot}/.prettierrc"],
      "cache": true
    },
    "clean": {
      "cache": false
    }
  },
  "projects": {
    "lit-agent-cli": {
      "tags": ["cli"]
    },
    "lit-agent-toolkit": {
      "tags": ["core"]
    },
    "lit-agent-contracts": {
      "tags": ["core"]
    },
    "lit-agent-signer": {
      "tags": ["core"]
    },
    "lit-agent-tool-uniswap": {
      "tags": ["tool"]
    },
    "lit-agent-tool-send-erc20": {
      "tags": ["tool"]
    },
    "lit-agent-tool-signer": {
      "tags": ["tool"]
    }
  }
}
